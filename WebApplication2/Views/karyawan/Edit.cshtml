@model WebApplication2.viewmodels.karyawanvm

@{
    ViewBag.Title = "Edit";
}

<link href="~/Content/jquery-confirm.min.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id_karyawan)
    <div class="form-horizontal">
        <h4>Edit Karyawan</h4>
        <div class="form-group">
            @Html.LabelFor(karyawanvm => karyawanvm, "Nama Karyawan", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(karyawanvm => karyawanvm.nama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(karyawanvm => karyawanvm.nama, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(karyawanvm => karyawanvm.kode_kar, "Kode Karyawan", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(karyawanvm => karyawanvm.kode_kar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(karyawanvm => karyawanvm.kode_kar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cabang_id, "Cabang Site", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-9.5">
                <div class="input-group form-inline col-xs-3">
                    @Html.EditorFor(model => model.nama_cabang, new { htmlAttributes = new { id = "namacabang_", @class = "form-control", @readonly = "readonly" } })
                    <span class="input-group-btn" style="width:0;">
                        <button id="btn_kntl" type="button" class="btn btn-default btn-flat btn-searcharea">Cari</button>
                    </span>
                </div>
                @Html.HiddenFor(m => m.cabang_id, new { id = "cabang_id" })
                @Html.ValidationMessageFor(model => model.cabang_id, "", new { @class = "text-danger" })
                <span class="field-validation-valid text-danger emptyarea" style="display:none"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(karyawanvm => karyawanvm.aktif, "aktif", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(karyawanvm => karyawanvm.aktif, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(karyawanvm => karyawanvm.aktif, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-3 col-md-10">
                @Html.ActionLink("back", "Index", null, new { @class = "btn btn-default btn-flat" })
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@Html.Partial("~/Views/karyawan/_modalcreate.cshtml")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery-confirm.min.js"></script>
}
